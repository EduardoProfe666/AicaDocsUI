@page
@model AicaDocsUI.Pages.Documents.Details

@{
    ViewData["Title"] = "Detalles de Documento";
    var date = Model.DocumentDto.DateOfValidity.ToString("dd/MM/yyyy hh:mm:ss tt");
}

<h1>Detalles de Documento</h1>

<div>
    <h4>Info de Documento</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.Raw("Título")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocumentDto.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Código")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocumentDto.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Edición")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocumentDto.Edition)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Páginas")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocumentDto.Pages)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Fecha de Vigencia")
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(date)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Correo")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocumentDto.UserEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Tipo de Documento")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Proceso de Documento")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Process)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Alcance de Documento")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Scope)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-primary" asp-page="./Index">Atrás</a>
</div>