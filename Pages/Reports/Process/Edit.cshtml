@page
@model Edit

@{
    ViewData["Title"] = "Editar Proceso de documento";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-11 col-md-8 col-lg-4 mx-auto rounded border p-3">
            <section>
                <h3 class="text-center mb-3">Editar Proceso de documento</h3>
                <hr/>
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nombre</label>
                        <input asp-for="NomenclatorModel.Name" class="form-control" placeholder="Ingrese el nombre"/>
                        <span asp-validation-for="NomenclatorModel.Name" class="text-danger"></span>
                    </div>
                    <div class="row mb-3">
                        <div class="col d-grid">
                            <a class="btn btn-outline-primary" href="/Reports/Process/Index" role="button">Cancelar</a>
                        </div>
                        <div class="col d-grid">
                            <button type="submit" class="btn btn-primary">Aceptar</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}