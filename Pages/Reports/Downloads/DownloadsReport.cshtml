@page
@model AicaDocsUI.Pages.Reports.Downloads.DownloadsReport


@{
    ViewData["Title"] = @Localizer["rd"];
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-11 col-md-8 col-lg-5 col-xl-4 mx-auto rounded border p-3">
            <section>
                <h2 class="text-center mb-3">@Localizer["rd"]</h2>
                <hr/>
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Localizer["tr"]</label>
                        <div>
                            <input type="radio" id="notParametrized" name="IsParam" value="false" asp-for="IsParam"/>
                            <label class="me-3" for="notParametrized">@Localizer["c"]</label>
                            <input type="radio" id="parametrized" name="IsParam" value="true" asp-for="IsParam"/>
                            <label for="parametrized">@Localizer["r"]</label>
                        </div>

                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Localizer["m"]</label>
                        <select id="roles" class="form-select" asp-for="@Model.Email" asp-items="Model.ListEmail" disabled="@(!Model.IsParam)">
                        </select>
                    </div>
                    <div class="row mb-3">
                        <div class="col d-grid">
                            <a class="btn btn-outline-primary" href="/Reports/Downloads/Index" role="button">@Localizer["back"]</a>
                        </div>
                        <div class="col d-grid">
                            <button type="submit" class="btn btn-primary">@Localizer["e"]</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

<script>
    document.getElementById('parametrized').addEventListener('change', function() {
        document.getElementById('roles').disabled = false; 
    });
    
    document.getElementById('notParametrized').addEventListener('change', function() {
        document.getElementById('roles').disabled = true; 
    });
</script>