@page
@model AicaDocsUI.Pages.Account.ConfirmEmail

@{
    ViewData["Title"] = @Localizer["correoConf"];
    var a1 = @Localizer["ingreseNC"];
    var a2 = @Localizer["repNC"];
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-11 col-md-8 col-lg-4 mx-auto rounded border p-3">
            <section>
                <h2 class="text-center mb-3">@Localizer["correoConf"]</h2>

                <form method="post">
                    <h5 class="text-center mb-3">@Model.WrapperInfo.FullName</h5>
                    <hr/>
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Localizer["nuevaContrasenna"]</label>
                        
                        <input type="password" asp-for="ConfirmEmailModel.Password" class="form-control" placeholder=@a1/>
                        <span asp-validation-for="ConfirmEmailModel.Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Localizer["repContrasenna"]</label>
                        
                        <input type="password" asp-for="ConfirmEmailModel.RepeatNewPassword" class="form-control" placeholder=@a2/>
                        <span asp-validation-for="ConfirmEmailModel.RepeatNewPassword" class="text-danger"></span>
                    </div>
                    <div class="row mb-3">
                        <div class="col d-grid">
                            <a class="btn btn-outline-primary" href="/" role="button">@Localizer["cancelar"]</a>
                        </div>
                        <div class="col d-grid">
                            <button type="submit" class="btn btn-primary">@Localizer["aceptar"]</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>


@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}