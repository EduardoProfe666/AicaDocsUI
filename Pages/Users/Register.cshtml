@page
@model AicaDocsUI.Pages.Users.Register

@{
    ViewData["Title"] = @Localizer["ru"];
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-11 col-md-8 col-lg-4 mx-auto rounded border p-3">
            <section>
                <h2 class="text-center mb-3">@Localizer["ru"]</h2>
                <hr/>
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Localizer["n"]</label>
                        <input asp-for="RegisterRequestModel.FullName" class="form-control" placeholder="@Localizer["en"]"/>
                        <span asp-validation-for="RegisterRequestModel.FullName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Localizer["email"]</label>
                        <input asp-for="RegisterRequestModel.Email" class="form-control" placeholder="@Localizer["ee"]"/>
                        <span asp-validation-for="RegisterRequestModel.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Localizer["r"]</label>
                        <span asp-validation-for="RegisterRequestModel.Role" class="text-danger"></span>
                        <select class="form-select" asp-for="RegisterRequestModel.Role" asp-items="Model.ListRoles">
                        </select>
                    </div>
                    <div class="row mb-3">
                        <div class="col d-grid">
                            <a class="btn btn-outline-primary" href="/Users/" role="button">@Localizer["cancel"]</a>
                        </div>
                        <div class="col d-grid">
                            <button type="submit" class="btn btn-primary">@Localizer["register"]</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}