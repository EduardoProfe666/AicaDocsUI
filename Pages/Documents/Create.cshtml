@page
@model AicaDocsUI.Pages.Documents.Create

@{
    ViewData["Title"] = "Crear Documento";
}


<div class="row">
    <div class="col-md-8 mx-auto rounded p-3">
        <h1 class="text-center mb-5">Crear Documento</h1>
        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Título</label>
                <div class="col-sm-8">
                    <input asp-for="DocumentCreatedDto.Title" class="form-control" placeholder="Ingrese el título"/>
                    <span asp-validation-for="DocumentCreatedDto.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Código</label>
                <div class="col-sm-8">
                    <input asp-for="DocumentCreatedDto.Code" class="form-control" placeholder="Ingrese el código"/>
                    <span asp-validation-for="DocumentCreatedDto.Code" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Edición</label>
                <div class="col-sm-8">
                    <input type="number" min="1" asp-for="DocumentCreatedDto.Edition" class="form-control" placeholder="Ingrese la edición"/>
                    <span asp-validation-for="DocumentCreatedDto.Edition" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Fecha de Vigencia</label>
                <div class="col-sm-8">
                    <input placeholder="Ingrese la fecha de vigencia" type="datetime-local" class=" form-control me-2" asp-for="DocumentCreatedDto.DateOfValidity"/>
                    <span asp-validation-for="DocumentCreatedDto.DateOfValidity" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Tipo de documento</label>
                <div class="col-sm-8">
                    <span asp-validation-for="DocumentCreatedDto.TypeId" class="text-danger"></span>
                    <select class="form-select" asp-for="DocumentCreatedDto.TypeId" asp-items="Model.ListTypeId">
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Proceso de documento</label>
                <div class="col-sm-8">
                    <span asp-validation-for="DocumentCreatedDto.ProcessId" class="text-danger"></span>
                    <select class="form-select" asp-for="DocumentCreatedDto.ProcessId" asp-items="Model.ListProcessId">
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Alcance de documento</label>
                <div class="col-sm-8">
                    <span asp-validation-for="DocumentCreatedDto.ScopeId" class="text-danger"></span>
                    <select class="form-select" asp-for="DocumentCreatedDto.ScopeId" asp-items="Model.ListScopeId">
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Fichero Pdf</label>
                <div class="col-sm-8">
                    <input type="file" asp-for="DocumentCreatedDto.Pdf" class="form-control"/>
                    <span asp-validation-for="DocumentCreatedDto.Pdf" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Fichero Word</label>
                <div class="col-sm-8">
                    <input type="file" asp-for="DocumentCreatedDto.Word" class="form-control"/>
                    <span asp-validation-for="DocumentCreatedDto.Word" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="offset-md-4 col-sm-4 mb-2 d-grid">
                    <a class="btn btn-outline-primary" href="/Documents/Index" role="button">Atrás </a>
                </div>
                <div class="col-sm-4 mb-2 d-grid">
                    <button type="submit" class="btn btn-primary">
                        Crear
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

